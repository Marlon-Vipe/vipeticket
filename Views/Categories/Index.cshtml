@model IEnumerable<Vipe_Tickets.Models.Category>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container-fluid">
    <h1>Categorías</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Categoría</a>
    </p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Categorías</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdCategory" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.IdCategory" class="btn btn-info btn-sm">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.IdCategory" class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>