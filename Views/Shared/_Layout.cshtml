<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vipe Tickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/vipeticket.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: #fff;
            flex-shrink: 0;
        }
        .sidebar .nav-link {
            color: #adb5bd;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: #495057;
        }
        .content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
        }
        .navbar {
            z-index: 1;
        }
    </style>
</head>
<body>
    <div class="sidebar d-flex flex-column">
        <h3 class="text-center py-3">Vipe Tickets</h3>
        <nav class="nav flex-column">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
            <a class="nav-link" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">Categorias</a>
        </nav>
    </div>

    <div class="content">
        <header>
            <nav class="navbar navbar-expand navbar-light bg-light border-bottom mb-3">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary me-2" id="sidebarToggle">&#9776;</button>
                    <span class="navbar-brand">Dashboard</span>
                </div>
            </nav>
        </header>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.classList.toggle('d-none');
        });
    </script>
</body>
</html>